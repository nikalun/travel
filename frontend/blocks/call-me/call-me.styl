.call-me
	
	&__phone
		display block
		font-size 20px
		font-weight 500
		line-height 27px
		text-decoration none
		color dark-gold
		
		@media (max-width 767px)
			display none
	
	&__button
		margin-top 10px
		padding-left 32px
		line-height 27px
		color dark-blue
		background-image url(../../image/svg/call-me.svg)
		background-position left center
		background-repeat no-repeat
		background-color transparent
		border none
		cursor pointer
		
		@media (max-width 767px)
			margin-top 0
			font-size 0
			background-position right center