.header
    position relative
    padding-top 43px
    
    @media (max-width 767px)
        padding-bottom 14px
        padding-top 12px
    
    &__container
        display flex
        flex-wrap wrap
        flex-direction row
        justify-content space-between
    
    &__soc-networks
        width 30%
        order 1
        
        @media (max-width 767px)
            display none
    
    &__logo
        margin-top 5px
        width 30%
        order 2
        
    &__call-me
        margin-top 4px
        width 30%
        order 3
        text-align right
    
        @media (max-width 767px)
            margin-top 0
            width auto
        
    &__menu
        margin-top 27px
        width 100%