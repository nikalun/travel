.menu-list
	
	&__ul
		margin-top -9px
		display flex
		flex-wrap wrap
		flex-direction column
		height 100px
		
		@media (max-width 767px)
			height auto
			flex-direction row
	
	&__li
		list-style-type none
		
		&:not(:last-child)
			width 25%
			
			@media (max-width 767px)
				width 50%
			
		@media (max-width 767px)
			width 50%
			
			&:nth-of-type(2n)
				padding-left 9px
		
		a
			font-size 14px
			font-weight 300
			line-height 24px
			text-decoration none
			color white
			
			@media (max-width 768px)
				line-height 34px