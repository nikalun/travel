.news
	
	&__wrapper
		position relative
		padding-top 32px
		padding-bottom 23px
		padding-left 28px
		padding-right 30px
		border 2px solid white
		
		@media (max-width 767px)
			padding-right 22px
			padding-bottom 49px
		
	&__list
		margin_x(-15px)
		margin-top 27px
		
		@media (max-width 767px)
			margin_x(-18px)
			margin-top 38px
		
		& ^[0]__tale:nth-of-type(3)
			padding-left 45px
			
			@media (max-width 767px)
				padding-left 0
				
		&::after
			content ''
			display table
			clear both
		
	&__tale
		padding_x(15px)
		display flex
		flex-direction row
		float left
		width 32.5%
		box-sizing border-box
		
		@media (max-width 767px)
			padding_x(0)
			width 100%
		
		&:not(:last-child)
			margin-bottom 32px
		
	&__tale-image
		width 67px
		height 67px
		
		@media (max-width 767px)
			display none
		
	&__tale-annotation
		padding-left 20px
		width 'calc(%s - %s)' % (100% 67px)
		padding-right 7px
		box-sizing border-box
		
		@media (max-width 767px)
			width 100%
		
	&__tale-date
		margin-top -10px
		font-size 14px
		line-height 27px
		color light-gray
		
		@media all and (-webkit-min-device-pixel-ratio:0)
			margin-top -8px
		
	&__tale-introtext
		margin-top 2px
		display inline-block
		font-size 14px
		line-height 20px
		text-decoration none
		color dark-blue
		transition all .5s ease
		
		@media (max-width 767px)
			position relative
			top -2px
		
		&:hover
			color dark-gold
			
	&__all-link
		position absolute
		bottom -20px
		left 'calc(%s - %s)' % (50% 77px)
		padding_x(29px)
		padding_y(4px)
		text-decoration none
		font-size 16px
		line-height 27px
		color dark-blue
		background-color bg-news
		border 2px solid white
		border-radius 20px
		
		@media (max-width 767px)
			position: absolute;
			bottom: -17px;
			left 'calc(%s - %s)' % (50% 68px)
			padding-left: 27px;
			padding-right: 26px;
			padding-top: 2px;
			padding-bottom: 2px;
			font-size 14px