.content
	padding-top 103px
	
	@media (max-width 767px)
		padding-top 38px
		
	&__container
		display flex
		flex-wrap wrap
		flex-direction row
		justify-content space-between
		align-items flex-start
		
	&__text
		margin-top 44px
		width 48%
		
		@media (max-width 767px)
			margin-top 35px
			width 100%
		
	&__countries
		width 68.5%
		
		@media (max-width 767px)
			width 100%
		
	&__image-border
		position absolute
		top 7px
		right 30px
		
		@media (max-width 767px)
			position relative
			top 0
			right auto
			left auto
			margin-top 60px